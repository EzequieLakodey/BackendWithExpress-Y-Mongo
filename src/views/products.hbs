<h1>All Products</h1>
<main>
    {{#each products}}
        <div>
            <ul>
                <li>
                    <div>
                        <h2><a
                                href='/products/{{this._id}}'
                            >{{this.title}}</a></h2>
                    </div>
                </li>

                <li>
                    <div>
                        <strong>${{this.price}}</strong>
                    </div>
                </li>
                <li>
                    <div>
                        <img src='{{this.thumbnail}}' alt='product thumbnail' />
                    </div>
                </li>
                <li>
                    <div>
                        {{this._id}}
                    </div>
                </li>
                <li>
                    <div>
                        <button onclick="addToCart('{{this.id}}')">Add to cart</button>
                    </div>
                </li>
            </ul>
        </div>
    {{/each}}
</main>
<script src='/socket.io/socket.io.js'></script>
<script type='module' src='/js/index.js'></script>